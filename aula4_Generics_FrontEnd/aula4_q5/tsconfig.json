{
	"compilerOptions": {
		"target": "es6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"rootDir": "src",
		"outDir": "public",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["es6", "dom"]
	},
	"files": ["src/index.ts"],
	"include": ["src/**/*.ts"]
}
